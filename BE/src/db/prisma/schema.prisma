generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id                 String   @id @default(uuid())
  name               String
  description        String
  category           Category
  total_investment   Int
  total_profit       Int
  employee_count     Int
  view_invest_amount Int      @default(0)
  count_my_picked    Int      @default(0)
  count_your_picked  Int      @default(0)
  changed_at         DateTime
}

enum Category {
  edu
  shopping
  game
  etc
}
